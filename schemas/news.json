{
  "name": "news",
  "version": "1.0.0",
  "tools": {
    "search": {
      "description": "Search for news articles related to financial markets",
      "request": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query (keywords, symbols, events)",
            "examples": ["Federal Reserve", "AAPL earnings", "crypto regulation"]
          },
          "since": {
            "type": "string",
            "format": "date-time",
            "description": "Search for articles published after this datetime"
          },
          "sources": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["reuters", "bloomberg", "wsj", "ft", "cnbc", "marketwatch", "reddit", "twitter"]
            },
            "description": "News sources to search"
          },
          "symbols": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Filter by specific symbols/tickers"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 1000,
            "default": 100
          }
        },
        "required": ["query", "since"]
      },
      "response": {
        "type": "object",
        "properties": {
          "articles": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {"type": "string"},
                "title": {"type": "string"},
                "summary": {"type": "string"},
                "content": {"type": "string"},
                "source": {"type": "string"},
                "url": {"type": "string"},
                "published_at": {"type": "string", "format": "date-time"},
                "symbols": {"type": "array", "items": {"type": "string"}},
                "sentiment": {
                  "type": "object",
                  "properties": {
                    "score": {"type": "number", "minimum": -1, "maximum": 1},
                    "confidence": {"type": "number", "minimum": 0, "maximum": 1},
                    "label": {"type": "string", "enum": ["bullish", "bearish", "neutral"]}
                  }
                },
                "entities": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "text": {"type": "string"},
                      "type": {"type": "string", "enum": ["PERSON", "ORG", "GPE", "MONEY", "PERCENT"]},
                      "confidence": {"type": "number"}
                    }
                  }
                }
              },
              "required": ["id", "title", "source", "published_at"]
            }
          },
          "metadata": {
            "type": "object",
            "properties": {
              "total_found": {"type": "integer"},
              "query_time_ms": {"type": "integer"},
              "sources_searched": {"type": "array", "items": {"type": "string"}}
            }
          }
        }
      },
      "errors": {
        "INVALID_QUERY": "Search query is invalid or too broad",
        "SOURCE_UNAVAILABLE": "One or more news sources are unavailable",
        "RATE_LIMITED": "News API rate limit exceeded"
      },
      "examples": {
        "request": {
          "query": "Federal Reserve interest rates",
          "since": "2024-01-01T00:00:00Z",
          "sources": ["reuters", "bloomberg"],
          "limit": 50
        }
      }
    }
  }
}
