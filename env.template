REDDIT_CLIENT_SECRET=

# News APIs
NEWS_API_KEY=
FINNHUB_API_KEY=

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================

# Grafana settings
GRAFANA_PASSWORD=admin

# Slack notifications
SLACK_WEBHOOK_URL=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=change_me_to_a_real_secret_key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable specific agents
ENABLE_TECHNICAL_AGENT=true
ENABLE_SENTIMENT_AGENT=true
ENABLE_FLOW_AGENT=true
